<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:layout_gravity="center"
    android:background="@drawable/bg"
    >

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
        >               
        
         <LinearLayout
	      android:layout_width="fill_parent"
	      android:layout_height="50dp"
	      android:gravity="left"
	      android:orientation="horizontal"
	      android:paddingTop="3dp"	   	       
	      android:background="@drawable/bgtop" >
      
      <Button
          android:id="@+telavacina/btnVoltarVacina"
          android:layout_width="62dp"
          android:layout_height="48dp"
          android:drawableTop="@drawable/voltarpequeno" />

      <TableLayout
          android:layout_width="wrap_content"  
          android:layout_height="match_parent" >

          <TableRow
              android:id="@+telavacina/tableRow1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" >

              <TextView
                  android:layout_width="195dp"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:paddingTop="5dp"
                  android:text="Vacina"
                  android:textColor="#FFFFFF"
                  android:textSize="25dp" />

          </TableRow>
          
      </TableLayout>
      
      <Button
          android:id="@+telavacina/btnSalvarVacina"
          android:layout_width="62dp"
          android:layout_height="48dp"
          android:drawableTop="@drawable/savesmall" />
      
  </LinearLayout>
    
    <TextView 
        android:id="@+telavacina/TxtPessoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:layout_marginBottom="3dp"
        />
    
    <EditText 
        android:id="@+telavacina/EdtPessoa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:focusable="false"
        android:enabled="false"
        />
    
    <TextView 
        android:id="@+telavacina/TxtTipoVacina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo Vacina"
        android:layout_marginBottom="3dp"
        />
    
    <Spinner 
        android:id="@+telavacina/SpTipoVacina"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        />
    
    <TextView 
        android:id="@+telavacina/TxtDose"
        android:text="Dose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        />
    
    <Spinner 
        android:id="@+telavacina/SpDose"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        />
    
    
    
     <TextView 
        android:id="@+telavacina/TxtLoteVacina"
        android:text="Lote Vacina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        />
     
     <LinearLayout 
         android:orientation="horizontal"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         >
     
      <EditText 
        android:id="@+telavacina/EdtLoteVacina"
        android:layout_width="fill_parent"
        android:layout_height="40dp" 
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        />
      
      <CheckBox 
          android:id="@+telavacina/ChkFLAplicada"
          android:text="Aplicada"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          />
      
      </LinearLayout>
    
    <TextView 
        android:id="@+telavacina/TxtDataAplicacao"
        android:text="Data de Aplicação"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        />
    
    <EditText 
        android:id="@+telavacina/DtDataAplicacao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:focusable="false"
        />
    
    </LinearLayout> 

</ScrollView>