<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:orientation="vertical"
        android:paddingTop="15dp"
        >
    
    	<TextView 
        	android:text=" Altura:"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="15dp"
			android:textColor="#000"
			android:layout_marginBottom="3dp"
		/>
    
    	<EditText 
    	    android:id="@+acompcrianca/EdtAltura"
        	android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Digite Aqui"
			android:layout_marginBottom="5dp"
			android:inputType="numberDecimal"
    	/>
    	
    	<TextView 
        	android:text=" Peso:"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="15dp"
			android:textColor="#000"
			android:layout_marginBottom="3dp"
		/>
    
    	<EditText
    	    android:id="@+acompcrianca/EdtPeso" 
        	android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Digite Aqui"
			android:layout_marginBottom="5dp"
			android:inputType="numberDecimal"
    	/>
    	
    	<TextView 
        	android:text=" Situação:"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="15dp"
			android:textColor="#000"
			android:layout_marginBottom="3dp"
		/>
    
    	<RadioGroup 
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:id="@+acompcrianca/RgSituacao"
		>
				         
		    <RadioButton 
		         android:id="@+acompcrianca/RbNutrida"
		         android:text="Nutrida"				             
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:layout_weight="1"
			/>
		    
		    <RadioButton 
		         android:id="@+acompcrianca/RbDesnutrida"
		         android:text="Desnutrida"				             
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:layout_weight="1"
			/>
				         
		</RadioGroup>
    	
    	<TextView 
        	android:text=" Perímetro Cefálico:"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="15dp"
			android:textColor="#000"
			android:layout_marginBottom="3dp"
		/>
    
    	<EditText
    	    android:id="@+acompcrianca/EdtPerimetroCefalico" 
        	android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Digite Aqui"
			android:layout_marginBottom="5dp"
			android:inputType="numberDecimal"
    	/>
    	
    	<TextView 
        	android:text=" Apgar 5:"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="15dp"
			android:textColor="#000"
			android:layout_marginBottom="3dp"
		/>
    
    	<EditText
    	    android:id="@+acompcrianca/EdtApgar5" 
        	android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Digite Aqui"
			android:layout_marginBottom="5dp"
			android:inputType="numberDecimal"
    	/>
    	
    	<TextView 
        	android:text=" Tipo de Parto:"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="15dp"
			android:textColor="#000"
			android:layout_marginBottom="3dp"
		/>
    	
		<RadioGroup 
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:id="@+acompcrianca/RgTipoParto"
		>
		             
		    <RadioButton 
		         android:id="@+acompcrianca/RbCesario"
		         android:text="Cesário"
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:layout_weight="1"
		    />
				         
		    <RadioButton 
		         android:id="@+acompcrianca/RbNormal"
		         android:text="Normal"				             
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:layout_weight="1"
			/>
		    
		    <RadioButton 
		         android:id="@+acompcrianca/RbForceps"
		         android:text="Fórceps"				             
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:layout_weight="1"
			/>
				         
		</RadioGroup>
    	
    	<TextView 
        	android:text=" Observação:"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="15dp"
			android:textColor="#000"
			android:layout_marginBottom="3dp"
		/>
    
    	<EditText
    	    android:id="@+acompcrianca/EdtObs" 
        	android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Digite Aqui"
			android:layout_marginBottom="5dp"
    	/>
    	
    </LinearLayout>
    
</ScrollView>